@page
@model CantinaUnitBV.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserResponse.Id" />
            
            <div class="form-group">
                <label asp-for="UpdateUserRequest.FirstName" class="control-label"></label>
                <input asp-for="UpdateUserRequest.FirstName" class="form-control" />
                <span asp-validation-for="UpdateUserRequest.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateUserRequest.SecondName" class="control-label"></label>
                <input asp-for="UpdateUserRequest.SecondName" class="form-control" />
                <span asp-validation-for="UpdateUserRequest.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
           <label  class="control-label">Role</label>
                <select asp-for="UpdateUserRequest.RoleId" class="form-control"
                        asp-items="@Model.Roles" >
                    <option value="">-- Select User type --</option>
                </select>
                <span asp-validation-for="UpdateUserRequest.RoleId" class="text-danger" />
            
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
